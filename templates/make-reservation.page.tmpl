{{template "base" .}}

{{define "content"}}

          <div class="container">
    
            <div class="row">
                <div class="col">
                    <h1>Make Reservation</h1>

                    <form method="post" action="" class="" novalidate>
                      <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                      <div class="form-group mt-5">
                          <label for="first_name">First Name:</label>
                          <input type="text" autocomplete="off" required name="first_name" id="first_name" class="form-control">
                      </div>

                      <div class="form-group mt-5">
                        <label for="last_name">Last Name:</label>
                        <input type="text" autocomplete="off" required name="last_name" id="last_name" class="form-control">
                      </div>    

                      <div class="form-group mt-5">
                        <label for="email">First Name:</label>
                        <input type="text" autocomplete="off" required name="email" id="email" class="form-control">
                      </div>    

                      <div class="form-group mt-5">
                        <label for="phone">Phone Number:</label>
                        <input type="text" autocomplete="off" required name="phone" id="phone" class="form-control">
                      </div>   

                      <hr>

                      <input type="submit" class="btn btn-primary" value="Make reservation">

                    </form>

                </div>
            </div>
    
          </div>

{{end}}
